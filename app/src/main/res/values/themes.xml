		<item name="dialogCornerRadius">@dimen/dialogCornerRadius</item>
		<item name="fontFamily">@font/open_sans</item>
		<item name="android:actionOverflowButtonStyle">@style/Widget.DR.OverFlow</item>
	</style>

	<style name="Theme.DR.Base">
		<item name="android:statusBarColor">@color/primary</item>
		<item name="android:navigationBarColor">@color/primary</item>
	</style>

</resources>