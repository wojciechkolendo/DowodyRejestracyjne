<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:layout_margin="16dp"
			  android:orientation="vertical"
			  tools:ignore="RtlHardcoded,DisableBaselineAlignment">

	<com.google.android.material.textfield.TextInputLayout
		style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<com.google.android.material.textfield.TextInputEditText
			android:id="@+id/rodzajPojazduTextView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="@string/result_page3_rodzaj_pojazdu"/>

	</com.google.android.material.textfield.TextInputLayout>

	<com.google.android.material.textfield.TextInputLayout
		style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
		android:layout_width="match_parent"
		android:layout_marginTop="16dp"
		android:layout_height="wrap_content">

		<com.google.android.material.textfield.TextInputEditText
			android:id="@+id/przeznaczenieTextView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="@string/result_page3_przeznaczenie"/>

	</com.google.android.material.textfield.TextInputLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:orientation="horizontal"
		android:weightSum="2">

		<com.google.android.material.textfield.TextInputLayout
			style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginRight="6dp"
			android:layout_weight="1">

			<com.google.android.material.textfield.TextInputEditText
				android:id="@+id/rokProdukcjiTextView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="@string/result_page3_rok_produkcji"
				android:maxLines="1"/>

		</com.google.android.material.textfield.TextInputLayout>

		<com.google.android.material.textfield.TextInputLayout
			style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="6dp"
			android:layout_weight="1">

			<com.google.android.material.textfield.TextInputEditText
				android:id="@+id/dopuszczalnaLadownoscTextView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="@string/result_page3_dopuszczalna_ladownosc"
				android:maxLines="1"/>

		</com.google.android.material.textfield.TextInputLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:orientation="horizontal"
		android:weightSum="2">

		<com.google.android.material.textfield.TextInputLayout
			style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginRight="6dp"
			android:layout_weight="1">

			<com.google.android.material.textfield.TextInputEditText
				android:id="@+id/naciskOsiTextView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="@string/result_page3_nacisk_osi"
				android:maxLines="1"/>

		</com.google.android.material.textfield.TextInputLayout>

		<com.google.android.material.textfield.TextInputLayout
			style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="6dp"
			android:layout_weight="1">

			<com.google.android.material.textfield.TextInputEditText
				android:id="@+id/nrKartyPojazduTextView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="@string/result_page3_nr_karty_pojazdu"
				android:maxLines="1"/>

		</com.google.android.material.textfield.TextInputLayout>

	</LinearLayout>

</LinearLayout>